<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.goods.medicine.dao.RecommendGoodsGroupRelationMapper">
    <resultMap id="BaseResultMap" type="com.yiling.goods.medicine.entity.RecommendGoodsGroupRelationDO">
        <result column="id" property="id"/>
        <result column="group_id" property="groupId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,group_id,goods_id
        , del_flag, create_user, create_time, update_user, update_time, remark
    </sql>
    <insert id="batchSaveGroupRelation">
        insert into recommend_goods_group_relation
        (group_id,goods_id,create_user, create_time, update_user, update_time)
        VALUES
        <foreach collection="goodsIds" item="goodsId" index="index" separator=",">
            (#{groupId},#{goodsId},#{opUserId},NOW(),#{opUserId},NOW())
        </foreach>
    </insert>
</mapper>