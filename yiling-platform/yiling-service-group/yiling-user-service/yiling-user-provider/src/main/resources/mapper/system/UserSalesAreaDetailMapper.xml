<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.user.system.dao.UserSalesAreaDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.user.system.entity.UserSalesAreaDetailDO">
    <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="area_code" property="areaCode" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        user_id, city_code, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <insert id="addUserSalesAreaDetail">
        insert into user_sales_area_detail(
            user_id, area_code, create_user, create_time, update_user, update_time
        ) values
        <foreach collection="list" item="item" separator=",">
            ( #{item.userId}, #{item.areaCode}, #{item.opUserId}, now(), #{item.opUserId}, now() )
        </foreach>
    </insert>

</mapper>
