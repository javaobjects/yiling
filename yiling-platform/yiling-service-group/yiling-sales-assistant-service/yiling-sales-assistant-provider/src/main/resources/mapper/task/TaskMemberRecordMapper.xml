<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.sales.assistant.task.dao.TaskMemberRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.sales.assistant.task.entity.TaskMemberRecordDO">
    <result column="id" property="id" />
        <result column="task_id" property="taskId" />
        <result column="eid" property="eid" />
        <result column="ename" property="ename" />
        <result column="contactor_phone" property="contactorPhone" />
        <result column="contactor_user_id" property="contactorUserId" />
        <result column="user_task_id" property="userTaskId" />
        <result column="trade_time" property="tradeTime" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        task_id, eid, ename, contactor_phone, contactor_user_id, user_task_id, trade_time, del_flag, create_user, create_time
    </sql>

    <update id="updateRecordById" parameterType="com.yiling.sales.assistant.task.entity.TaskMemberRecordDO">
        UPDATE sa_task_member_record SET del_flag=1,update_time=#{updateTime},remark=#{remark}  WHERE id=#{id} AND del_flag=0
    </update>
</mapper>
