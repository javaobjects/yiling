<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.search.word.dao.EsWordExpansionMapper">
    <resultMap id="BaseResultMap" type="com.yiling.search.word.entity.EsWordExpansionDO">
        <result column="id" property="id"/>
        <result column="word" property="word"/>
        <result column="type" property="type"/>
        <result column="ref_id" property="refId"/>
        <result column="status" property="status"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,word,`type`,ref_id,status,del_flag,create_user,create_time,update_user,update_time
    </sql>
    <select id="getGroupByType" resultType="java.lang.Long">
        SELECT ref_id FROM es_word_expansion
        WHERE del_flag=0 and status = 0
        and `type` = #{type}
        group by ref_id
    </select>
</mapper>