<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.open.erp.dao.ErpOrderPushMapper">
    <resultMap id="BaseResultMap" type="com.yiling.open.erp.entity.ErpOrderPushDO">
        <result column="id" property="id"></result>
        <result column="order_id" property="orderId"></result>
        <result column="order_no" property="orderNo"></result>
        <result column="seller_eid" property="sellerEid"></result>
        <result column="buyer_eid" property="buyerEid"></result>
        <result column="push_type" property="pushType"></result>
        <result column="erp_push_status" property="erpPushStatus"></result>
        <result column="erp_push_time" property="erpPushTime"></result>
        <result column="erp_push_remark" property="erpPushRemark"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>

    <sql id="Base_Column_List">
       `id`,  `order_id`,  `order_no`,  `seller_eid`,  `buyer_eid`,   `push_type`, `erp_push_status`,  `erp_push_time`,  `erp_push_remark`,  `create_time`
    </sql>

    <select id="getErpOrderPushByPushTypeAndOrderId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from erp_order_push
        where order_id=#{orderId}
        and push_type=#{pushType,jdbcType=INTEGER}
    </select>
</mapper>