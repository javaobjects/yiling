<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.basic.mail.dao.MailSendRecordMapper">
    <resultMap id="BaseResultMap" type="com.yiling.basic.mail.entity.MailSendRecordDO">
        <result column="id" property="id"></result>
        <result column="mail_code" property="mailCode"></result>
        <result column="business_id" property="businessId"></result>
        <result column="mail_uid" property="mailUid"></result>
        <result column="send_data_json" property="sendDataJson"></result>
        <result column="send_status" property="sendStatus"></result>
        <result column="send_time" property="sendTime"></result>
        <result column="send_result_msg" property="sendResultMsg"></result>
    </resultMap>
    <sql id="Base_Column_List">
        `id`,mail_code,business_id,mail_uid,send_data_json,send_status,send_time,send_result_msg
    </sql>
    <select id="getRecordByBusinessIdsAndSendStatus" resultType="com.yiling.basic.mail.entity.MailSendRecordDO">
        select <include refid="Base_Column_List"/> from mail_send_record
        where send_status = #{sendStatus}
        and mail_code = #{mailCode}
        and `business_id` in
        <foreach collection="businessIds" item="businessId" index="index" open="("
                 close=")" separator=",">
            #{businessId}
        </foreach>
        and del_flag = 0
    </select>
</mapper>