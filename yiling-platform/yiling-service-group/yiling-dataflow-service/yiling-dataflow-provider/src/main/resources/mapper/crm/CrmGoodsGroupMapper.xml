<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.dataflow.crm.dao.CrmGoodsGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.dataflow.crm.entity.CrmGoodsGroupDO">
        <result column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,code, `name`, status,
        del_flag,create_time,create_user,update_time,update_user,remark
    </sql>
    <select id="queryGroupPage" resultType="com.yiling.dataflow.crm.entity.CrmGoodsGroupDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM crm_goods_group gg
        <where>
            del_flag=0
            <if test="request.groupCode != null and request.groupCode !=''">
                and code like concat('%',#{request.groupCode},'%')
            </if>
            <if test="request.groupName != null and request.groupName !=''">
                and `name` like concat('%',#{request.groupName},'%')
            </if>
            <if test="request.departIds != null and request.departIds.size() >0">
                and EXISTS(
                    SELECT 1 FROM crm_department_product_relation cdpr
                    WHERE cdpr.del_flag = 0 and cdpr.product_group_id = gg.id
                    AND cdpr.department_id in
                    <foreach item="item" index="index" collection="request.departIds" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                )
            </if>
        </where>
        order by id desc
    </select>

</mapper>
