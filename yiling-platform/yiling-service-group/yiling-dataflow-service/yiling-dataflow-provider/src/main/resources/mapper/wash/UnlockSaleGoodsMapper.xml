<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.dataflow.wash.dao.UnlockSaleGoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.dataflow.wash.entity.UnlockSaleGoodsDO">
    <result column="id" property="id" />
        <result column="rule_id" property="ruleId" />
        <result column="crm_goods_code" property="crmGoodsCode" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        rule_id, crm_goods_code, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <select id="listPage" resultType="com.yiling.dataflow.wash.bo.UnlockSaleGoodsBO">
        select
        t.id,
        e.goods_code as goodsCode,
        e.goods_name as goodsName,
        e.goods_spec as goodsSpec
        from unlock_sale_goods t left join crm_goods_info e on t.crm_goods_code=e.goods_code
        <where>
            t.del_flag = 0 and t.rule_id=#{request.ruleId}
            <if test="request.goodsCode != null and request.goodsCode != ''">
                and e.`goods_code` = #{request.goodsCode}
            </if>
            <if test="request.goodsName != null and request.goodsName != ''">
                and e.goods_name like concat ('%',#{request.goodsName},'%')
            </if>
        </where>
    </select>

</mapper>
