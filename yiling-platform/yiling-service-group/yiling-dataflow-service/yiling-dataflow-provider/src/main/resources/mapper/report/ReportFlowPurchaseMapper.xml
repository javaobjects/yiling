<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.dataflow.report.dao.ReportFlowPurchaseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.dataflow.report.entity.ReportFlowPurchaseDO">
    <result column="id" property="id" />
        <result column="eid" property="eid" />
        <result column="ename" property="ename" />
        <result column="goods_category" property="goodsCategory" />
        <result column="po_time" property="poTime" />
        <result column="po_quantity" property="poQuantity" />
        <result column="yl_sale_price" property="ylSalePrice" />
        <result column="total_amount" property="totalAmount" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        eid, ename, goods_category, po_time, po_quantity, yl_sale_price, total_amount, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <delete id="deleteReportFlowPurchase">
        delete from report_flow_purchase where po_time>=#{time}
    </delete>

    <select id="statisticsLhPurchaseAmount" resultType="com.yiling.dataflow.report.bo.ReportFlowBO">
        select t.po_time as `time`,SUM(t.total_amount) as `number` from report_flow_purchase t
        where t.del_flag=0
        <if test="request.startTime != null">
            AND po_time <![CDATA[ >= ]]> #{request.startTime}
        </if>
        <if test="request.endTime != null">
            AND po_time <![CDATA[ <= ]]> #{request.endTime}
        </if>
        <if test="request.eids != null and request.eids.size() > 0">
            AND eid in
            <foreach item="item" index="index" collection="request.eids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="request.goodsCategory != null">
            and goods_category=#{request.goodsCategory}
        </if>
        GROUP BY t.po_time order by t.po_time
    </select>


    <select id="statisticsLhPurchaseNumber" resultType="com.yiling.dataflow.report.bo.ReportFlowBO">
        select t.po_time as `time`,SUM(t.po_quantity) as `number` from report_flow_purchase t
        where t.del_flag=0
        <if test="request.startTime != null">
            AND po_time <![CDATA[ >= ]]> #{request.startTime}
        </if>
        <if test="request.endTime != null">
            AND po_time <![CDATA[ <= ]]> #{request.endTime}
        </if>
        <if test="request.eids != null and request.eids.size() > 0">
            AND eid in
            <foreach item="item" index="index" collection="request.eids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="request.goodsCategory != null">
            and goods_category=#{request.goodsCategory}
        </if>
        GROUP BY t.po_time order by t.po_time
    </select>

    <select id="statisticsLhAmountAndNumber" resultType="com.yiling.dataflow.report.bo.ReportFlowStatisticsBO">
        select t.po_time as `time`,SUM(t.po_quantity) as `number`,SUM(t.total_amount) as `amount`,COUNT(DISTINCT eid) as `count` from report_flow_purchase t
        where t.del_flag=0
        <if test="request.startTime != null">
            AND po_time <![CDATA[ >= ]]> #{request.startTime}
        </if>
        <if test="request.endTime != null">
            AND po_time <![CDATA[ <= ]]> #{request.endTime}
        </if>
        <if test="request.eids != null and request.eids.size() > 0">
            AND eid in
            <foreach item="item" index="index" collection="request.eids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="request.goodsCategory != null">
            and goods_category=#{request.goodsCategory}
        </if>
        GROUP BY t.po_time order by t.po_time desc
    </select>

</mapper>
