<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.dataflow.wash.dao.UnlockSaleCustomerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.dataflow.wash.entity.UnlockSaleCustomerDO">
    <result column="id" property="id" />
        <result column="rule_id" property="ruleId" />
        <result column="crm_enterprise_id" property="crmEnterpriseId" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        rule_id, crm_enterprise_id, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>


    <select id="listPage" resultType="com.yiling.dataflow.wash.bo.CrmEnterpriseBusinessRuleBO">
        select
        t.id,
        e.id as crmEnterpriseId,
        e.name,
        e.supply_chain_role as supplyChainRole,
        e.province_name as provinceName,
        e.city_name as cityName,
        e.region_name as regionName
        from unlock_sale_customer t left join crm_enterprise e on t.crm_enterprise_id=e.id
        <where>
            t.del_flag = 0 and t.rule_id=#{request.customerRuleId}
            <if test="request.crmEnterpriseId!=null and request.crmEnterpriseId!=0">
                and e.id=#{request.crmEnterpriseId}
            </if>
            <if test="request.name!=null and request.name!='' ">
                and e.name like concat ('%',#{request.name},'%')
            </if>
            <if test="request.provinceCode != null and request.provinceCode != ''">
                and e.`province_code` = #{request.provinceCode}
            </if>
            <if test="request.cityCode != null and request.cityCode != ''">
                and e.`city_code` = #{request.cityCode}
            </if>
            <if test="request.regionCode != null and request.regionCode != ''">
                and e.`region_code` = #{request.regionCode}
            </if>
        </where>
    </select>

</mapper>
