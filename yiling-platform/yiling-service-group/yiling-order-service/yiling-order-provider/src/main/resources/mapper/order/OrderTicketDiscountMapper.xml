<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.order.order.dao.OrderTicketDiscountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.order.order.entity.OrderTicketDiscountDO">
        <result column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="apply_id" property="applyId"/>
        <result column="order_no" property="orderNo"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="cash_discount_amount" property="cashDiscountAmount"/>
        <result column="ticket_discount_no" property="ticketDiscountNo"/>
        <result column="use_amount" property="useAmount"/>
        <result column="return_amount" property="returnAmount"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        ,
        order_id,apply_id, order_no, total_amount, cash_discount_amount, ticket_discount_no,use_amount,return_amount, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <update id="refundOrderTicketDiscount">
        update order_ticket_discount
        set return_amount = return_amount + #{refundAmount}
        where id = #{id}
    </update>
</mapper>
