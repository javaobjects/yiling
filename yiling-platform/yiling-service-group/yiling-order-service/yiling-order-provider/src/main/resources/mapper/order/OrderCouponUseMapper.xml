<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.order.order.dao.OrderCouponUseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.order.order.entity.OrderCouponUseDO">
    <result column="id" property="id" />
        <result column="order_id" property="orderId" />
        <result column="coupon_activity_id" property="couponActivityId" />
        <result column="coupon_id" property="couponId" />
        <result column="coupon_name" property="couponName" />
        <result column="amount" property="amount" />
        <result column="platform_ratio" property="platformRatio" />
        <result column="business_ratio" property="businessRatio" />
        <result column="is_return" property="isReturn" />
        <result column="coupon_type" property="couponType" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        order_id, coupon_activity_id, coupon_id, coupon_name, amount, platform_ratio, business_ratio, coupon_type,is_return, del_flag, create_user, create_time, update_user, update_time
    </sql>

    <sql id="Base_Table_Name">
        order_coupon_use
    </sql>

    <select id="getCountByCouponActivityId" resultType="java.util.HashMap">
        SELECT
        ocu.coupon_activity_id AS couponActivityId, count(1) AS useCount
        FROM order_coupon_use ocu
        INNER JOIN marketing_coupon mc ON mc.id = ocu.coupon_id
        WHERE
        ocu.is_return = 1
        AND mc.del_flag = 0
        AND mc.used_status = 2
        AND mc.`status` = 1
        AND ocu.coupon_activity_id IN
        <foreach item="item" index="index" collection="couponActivityIdList" open="(" separator="," close=")">
            #{item}
        </foreach>
        GROUP BY ocu.coupon_activity_id
    </select>

</mapper>
