<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.marketing.lotteryactivity.dao.LotteryActivityJoinDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.marketing.lotteryactivity.entity.LotteryActivityJoinDetailDO">
    <result column="id" property="id" />
        <result column="lottery_activity_id" property="lotteryActivityId" />
        <result column="activity_name" property="activityName" />
        <result column="lottery_time" property="lotteryTime" />
        <result column="platform_type" property="platformType" />
        <result column="uid" property="uid" />
        <result column="uname" property="uname" />
        <result column="reward_type" property="rewardType" />
        <result column="reward_name" property="rewardName" />
        <result column="reward_number" property="rewardNumber" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        lottery_activity_id, activity_name, lottery_time, platform_type, uid, uname, reward_type, reward_name, show_name, reward_number, status, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <select id="queryHitList" resultType="com.yiling.marketing.lotteryactivity.dto.LotteryActivityJoinDetailDTO">
        select <include refid="Base_Column_List"/> from marketing_lottery_activity_join_detail
        <where>
            <if test="lotteryActivityId != null and lotteryActivityId != 0">
                lottery_activity_id = #{lotteryActivityId}
                and reward_type not in (5)
            </if>
            order by level asc, lottery_time desc
            limit #{limit}
        </where>
    </select>

</mapper>
