        <result column="condition_order_status" property="conditionOrderStatus" />
        <result column="condition_order_status_value" property="conditionOrderStatusValue" />
        <result column="condition_order_platform" property="conditionOrderPlatform" />
        <result column="condition_order_platform_value" property="conditionOrderPlatformValue" />
        <result column="condition_enterprise_type" property="conditionEnterpriseType" />
        <result column="condition_enterprise_type_value" property="conditionEnterpriseTypeValue" />
        <result column="condition_user_type" property="conditionUserType" />
        <result column="cumulative" property="cumulative" />
        <result column="repeat_give" property="repeatGive" />
        <result column="max_give_num" property="maxGiveNum" />
