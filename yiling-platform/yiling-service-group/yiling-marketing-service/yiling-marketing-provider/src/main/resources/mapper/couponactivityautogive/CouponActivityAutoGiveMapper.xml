        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Table_Name">
        `marketing_coupon_activity_auto_give`
    </sql>

    <sql id="Base_Column_List">
        id, name, begin_time, end_time, type, condition_goods, condition_paymethod, condition_paymethod_value,
        condition_order_status, condition_order_status_value, condition_order_platform, condition_order_platform_value,
        condition_enterprise_type, condition_enterprise_type_value, condition_user_type, cumulative, repeat_give,
        max_give_num, give_count, status, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <update id="updateGiveCountByIdList">
        update
        <include refid="Base_Table_Name"/>
        set
        give_count = give_count + 1,
        update_user = #{request.opUserId},
        update_time = #{request.opTime}
        where
        del_flag = 0
        and id in
        <foreach item="item" index="index" collection="request.ids" open="(" separator="," close=")">
            #{item}
        </foreach>
        and give_count <![CDATA[ < ]]> max_give_num
    </update>

    <select id="getIdByName" resultType="java.lang.Long">
        SELECT
        id
        FROM
        <include refid="Base_Table_Name"/>
        WHERE
        name = #{request.name}
        AND status in (1,2)
        AND del_flag = 0
        LIMIT 1
    </select>

