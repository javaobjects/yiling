<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.marketing.lotteryactivity.dao.LotteryActivityGivePromoterMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.marketing.lotteryactivity.entity.LotteryActivityGivePromoterDO">
    <result column="id" property="id" />
        <result column="lottery_activity_id" property="lotteryActivityId" />
        <result column="promoter_id" property="promoterId" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        lottery_activity_id, promoter_id, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>

    <select id="queryHadAddPromoterPage" resultType="com.yiling.marketing.lotteryactivity.bo.EnterpriseSimpleBO">
        select e.id, e.name from marketing_lottery_activity_give_promoter gp left join enterprise e on gp.promoter_id = e.id
        <where>
            gp.del_flag = 0
            <if test="request.lotteryActivityId != null and request.lotteryActivityId != 0">
                and gp.lottery_activity_id = #{request.lotteryActivityId}
            </if>
            <if test="request.id != null and request.id != 0">
                and gp.promoter_id = #{request.id}
            </if>
            <if test="request.name != null and request.name != ''">
                and e.name like concat('%',#{request.name},'%')
            </if>
        </where>
    </select>

</mapper>
