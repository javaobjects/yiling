<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.mall.category.dao.CategoryGoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.mall.category.entity.CategoryGoodsDO">
        <result column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="sort" property="sort"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        ,
        category_id, goods_id, sort, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>
    <select id="countCategoryGoods" resultType="com.yiling.mall.category.bo.CategoryGoodsNumBO">
        select
        cg.category_id as categoryId,
        count(1) as goodsNum
        from category_goods cg
        where cg.category_id in
        (
        <foreach collection="categoryIds" item="categoryId" separator=",">
            #{categoryId}
        </foreach>
        )
        and cg.del_flag = 0
        group by cg.category_id
    </select>

</mapper>
