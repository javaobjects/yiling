<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.mall.banner.dao.BannerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.mall.banner.entity.BannerDO">
    <result column="id" property="id" />
        <result column="eid" property="eid" />
        <result column="title" property="title" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="link_type" property="linkType" />
        <result column="link_url" property="linkUrl" />
        <result column="pic" property="pic" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        eid, title, start_time, end_time, link_type, link_url, pic, status, sort, del_flag, create_user, create_time, update_user, update_time, remark
    </sql>
    <select id="pageList" resultType="com.yiling.mall.banner.entity.BannerDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM banner b
        <where>
            <if test="request.eid != null and request.eid != 0 ">
                and b.eid = #{request.eid}
            </if>
            <if test="request.title != null and request.title != ''">
                and b.title like CONCAT('%',#{request.title},'%')
            </if>
            <if test="request.status != null and request.status != 0">
                and b.status = #{request.status}
            </if>
            <if test="request.startTime != null">
                and b.start_time <![CDATA[ >= ]]> #{request.startTime}
            </if>
            <if test="request.endTime != null">
                and b.end_time <![CDATA[ <= ]]> #{request.endTime}
            </if>
            <if test="request.createTimeStart != null">
                and b.create_time <![CDATA[ >= ]]> #{request.createTimeStart}
            </if>
            <if test="request.createTimeEnd != null">
                and b.create_time <![CDATA[ <= ]]> #{request.createTimeEnd}
            </if>
            <if test="request.availableTime != null">
                and b.start_time <![CDATA[ <= ]]> #{request.availableTime} and b.end_time <![CDATA[ > ]]> #{request.availableTime}
            </if>
            and b.del_flag = 0
        </where>
        ORDER BY b.sort DESC, b.end_time, b.start_time, b.create_time
    </select>

</mapper>
