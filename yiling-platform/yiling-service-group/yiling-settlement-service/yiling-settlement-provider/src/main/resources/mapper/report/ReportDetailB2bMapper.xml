    <select id="queryReportB2bOrderPageGroupByOrder" resultType="java.lang.Long" >
        SELECT
            order_id
        FROM
            report_detail_b2b
        WHERE
            del_flag = 0
            AND report_id = #{request.reportId}
            <if test="request.buyerEidList != null and request.buyerEidList.size() > 0">
               AND buyer_eid IN
               <foreach item="item" index="index" collection="request.buyerEidList"
                        open="(" separator="," close=")">
                   #{item}
               </foreach>
             </if>
             <if test="request.orderId != null and request.orderId != 0">
                 AND order_id = #{request.orderId}
             </if>
             <if test="request.startCreateOrderTime != null">
                 AND order_create_time &gt;=#{request.startCreateOrderTime}
             </if>
             <if test="request.endCreateOrderTime != null">
                 AND order_create_time &lt;= #{request.endCreateOrderTime}
             </if>
             <if test="request.identificationStatus != null and request.identificationStatus != 0">
                 AND identification_status = #{request.identificationStatus}
             </if>
             <if test="request.rebateStatus != null and request.rebateStatus != 0">
                 AND rebate_status = #{request.rebateStatus}
             </if>
        GROUP BY
            order_id
    </select>

    <select id="queryRebateGoods" parameterType="com.yiling.settlement.report.dto.request.QueryStockOccupyPageRequest" resultType="com.yiling.settlement.report.bo.RebatedGoodsCountBO">
        SELECT
            detail.seller_eid AS 'eid',
            detail.goods_id AS 'ylGoodsId',
            sum( detail.receive_quantity ) AS 'quantity',
            detail.goods_erp_code AS 'goodsInSn',
            detail.purchase_channel
        FROM
            report_detail_b2b detail
            LEFT JOIN report ON detail.report_id = report.id
        WHERE
          <if test="request == null or request.size() == 0">
            AND 1 != 1
          </if>
          <if test="request != null and request.size() > 0">
             <foreach item="item" index="index" collection="request" open="(" separator="OR" close=")">
                (detail.seller_eid = #{item.eid} AND detail.goods_id = #{item.ylGoodsId} AND detail.goods_erp_code = #{item.goodsInSn} AND detail.purchase_channel=#{item.purchaseChannel})
             </foreach>
            AND report.del_flag = 0
            AND report.`status` IN ( 1, 2, 3 )
          </if>
        GROUP BY
            detail.seller_eid,
            detail.goods_id,
            detail.goods_erp_code,
            detail.purchase_channel
    </select>

