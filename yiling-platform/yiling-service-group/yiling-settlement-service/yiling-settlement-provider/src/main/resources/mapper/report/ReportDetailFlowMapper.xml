    <select id="queryReportFlowOrderPageGroupByOrder" resultType="java.lang.String" parameterType="com.yiling.settlement.report.dto.request.QueryReportDetailFlowPageRequest">
        SELECT
            so_no
        FROM
            report_detail_flow
        WHERE
            del_flag = 0
            <if test="request.reportIdList != null and request.reportIdList.size() > 0">
               AND report_id IN
               <foreach item="item" index="index" collection="request.reportIdList"
                        open="(" separator="," close=")">
                   #{item}
               </foreach>
             </if>
             <if test="request.enterpriseName != null and request.enterpriseName != ''">
                AND enterprise_name LIKE CONCAT('%',#{request.enterpriseName},'%')
             </if>
             <if test="request.startSoTime != null">
                 AND so_time &gt;=#{request.startSoTime}
             </if>
             <if test="request.endSoTime != null">
                 AND so_time &lt;= #{request.endSoTime}
             </if>
             <if test="request.identificationStatus != null and request.identificationStatus != 0">
                 AND identification_status = #{request.identificationStatus}
             </if>
             <if test="request.rebateStatus != null and request.rebateStatus != 0">
                 AND rebate_status = #{request.rebateStatus}
             </if>
        GROUP BY
            so_no
    </select>

    <select id="queryRebateGoods" resultType="com.yiling.settlement.report.bo.RebatedGoodsCountBO" parameterType="com.yiling.settlement.report.dto.request.QueryStockOccupyPageRequest">
 	 SELECT
 	    detail.seller_eid AS 'eid',
        detail.yl_goods_id,
        sum( detail.so_quantity ) AS 'quantity',
        detail.goods_in_sn,
        detail.purchase_channel
     FROM
        report_detail_flow detail
        LEFT JOIN report ON detail.report_id = report.id
     WHERE
        <if test="request == null or request.size() == 0">
            AND 1 != 1
        </if>
        <if test="request != null and request.size() > 0">
            <foreach item="item" index="index" collection="request" open="(" separator="OR" close=")">
                (detail.seller_eid = #{item.eid} AND detail.yl_goods_id = #{item.ylGoodsId} AND detail.goods_in_sn = #{item.goodsInSn} AND detail.purchase_channel=#{item.purchaseChannel})
            </foreach>
            AND report.del_flag = 0
            AND report.`status` IN ( 1, 2, 3 )
        </if>
     GROUP BY
        detail.seller_eid,
        detail.yl_goods_id,
        detail.goods_in_sn,
        detail.purchase_channel
    </select>

