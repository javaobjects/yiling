<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiling.hmc.insurance.dao.InsuranceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yiling.hmc.insurance.entity.InsuranceDO">
    <result column="id" property="id" />
        <result column="insurance_company_id" property="insuranceCompanyId" />
        <result column="insurance_name" property="insuranceName" />
        <result column="status" property="status" />
        <result column="quarter_identification" property="quarterIdentification" />
        <result column="year_identification" property="yearIdentification" />
        <result column="pay_amount" property="payAmount" />
        <result column="service_ratio" property="serviceRatio" />
        <result column="url" property="url" />
        <result column="del_flag" property="delFlag" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <resultMap id="insuranceGoodsMap" type="com.yiling.hmc.insurance.dto.InsuranceGoodsDTO">
        <result column="id" property="id" />
        <result column="insurance_id" property="insuranceId" />
        <result column="goods_name" property="goodsName" />
        <result column="sell_specifications_id" property="sellSpecificationsId" />
        <result column="market_price" property="marketPrice" />
        <result column="insurance_price" property="insurancePrice" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, insurance_company_id, insurance_name, status, quarter_identification, year_identification, pay_amount, service_ratio, url, del_flag,
        create_user, create_time, update_user, update_time, remark
    </sql>

    <select id="queryGoods" resultMap="insuranceGoodsMap">
        select detail.insurance_id,
               detail.goods_name,
               control.sell_specifications_id,
               control.market_price,
               control.insurance_price
        from hmc_insurance ins,
             hmc_insurance_detail detail,
             hmc_goods_control control,
             hmc_insurance_company company
        where ins.id = detail.insurance_id
          and detail.control_id = control.id
          and ins.insurance_company_id = company.id
          and ins.status = 1
          and ins.del_flag = 0
          and detail.del_flag = 0
          and control.del_flag = 0
          and company.del_flag=0
          and company.status=1

    </select>

</mapper>
